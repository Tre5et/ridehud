  "authors": [
    "TreSet"
  ],
  "contact": {
    "homepage": "https://github.com/Tre5et/ridehud/releases",
    "sources": "https://github.com/Tre5et/ridehud",
    "issues": "https://github.com/Tre5et/ridehud/issues"
  },

  "license": "GPL-3.0",
  "icon": "assets/ridehud/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.treset.ridehud.RideHudMod"
    ],
    "client": [
